<div class="container">
  <h1 class="mb-1 restaurant-show-title">{{rst.name}}</h1>
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div class="col-12 col-md-10 mx-auto">
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          {{rst.category}}
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          {{rst.location}}
          <a href="{{rst.google_map}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          {{rst.phone}}
        </p>

        <p class="mb-5">
          {{rst.description}}
        </p>
        <img class="rounded mx-auto d-block mb-4 w-100" src="{{rst.image}}" alt="{{rst.name}}"
          style="max-width: 600px;">

        <form action="/restaurants/{{{rst._id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
          <div class="nav justify-content-end mr-5">
            <button type="button" class="btn btn-warning mr-1">
              <a class="text-white" href="/">back</a>
            </button>
            <button type="submit" class="btn btn-danger">刪除</button>
          </div>
        </form>

      </div>


    </div>


  </div>
</div>